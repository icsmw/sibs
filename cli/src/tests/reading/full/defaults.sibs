#(defaults)
    @build [
        /// Build application
        :app:build;
    ];
    @lint($target: rust | ts | all) [
        /// Linting task. Quality code checks.
        /// lint rust >> run clippy for all rust modules;
        /// lint ts >> run eslint for all TypeScript modules;
        /// lint all >> check all modules of application;
        $target == "rust" => [
            :module:lint;
            :binding:lint;
        ];
        $target == "ts" => [
            :client:lint;
            :shared:lint;
            :wrapper:lint;
            :app:lint;
        ];
        $target == "all" => [
            :self:lint("rust");
            :self:lint("ts");
        ];
    ];