/// Testing join 
#(join: ../../../../target/debug)
    @test_a {
        join (
            `./exit 0 1000 1000 10`;
            `./exit 0 2000 1000 10`;
            `./exit 0 3000 1000 10`;
            `./exit 0 4000 1000 10`;
        );
    };

#(abort)
    @success_test {
        join (
            :join:test_a;
            :self:success;
        );
    }
    @success_with_message_test {
        join (
            :join:test_a;
            :self:success_with_message;
        );
    }
    @error_test {
        join (
            :join:test_a;
            :self:error;
        );
    }
    @error_with_message_test {
        join (
            :join:test_a;
            :self:error_with_message;
        );
    }
    @success {
        logs::info("This logs should be visible");
        sleep(500);
        abort();
        logs::info("This logs should NOT be visible");
    };
    @success_with_message {
        logs::info("This logs should be visible");
        abort(0; "Hello World!");
        logs::info("This logs should NOT be visible");
    };
    @error {
        logs::info("This logs should be visible");
        abort(1);
        logs::info("This logs should NOT be visible");
    };
    @error_with_message {
        logs::info("This logs should be visible");
        abort(1; "Hello World!");
        logs::info("This logs should NOT be visible");
    };
