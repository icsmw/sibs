/// Testing exit codes
#(exit: ../../../../target/debug)
    /// Success exit
    success [
        @env::is_os(windows) => `exit.exe 0 1000 10 100`;
        @env::is_os(linux) => `./exit 0 1000 10 100`;
    ];
    /// Fail exit
    fail [
        `ls -lsa`;
        `pwd`;
        @env::is_os(windows) => `exit.exe 1 1000 10 100`;
        @env::is_os(linux) => `exit 1 1000 10 100`;
    ];
    /// Custom run
    custom($code: {number})[
        `ls -lsa`;
        `pwd`;
        @env::is_os(windows) => `exit.exe {$code} 1000 10 100`;
        @env::is_os(linux) => `exit {$code} 1000 10 100`;
    ];